#!/bin/bash
mogrify -resize 1776x1276 /home/pi/photobooth_images/*.jpg
montage /home/pi/photobooth_images/*.jpg -geometry +10+10 /home/pi/temp_montage2.jpg
montage /home/pi/temp_montage2.jpg /home/pi/shuttermatic/photobooth_label.jpg -tile 2x1 -geometry +5+5 /home/pi/temp_montage3.jpg
lp -d Canon_1200 /home/pi/temp_montage3.jpg
suffix=$(date +%H%M%S)
cp /home/pi/temp_montage3.jpg /home/pi/PB_archive/PB_${suffix}.jpg
rm /home/pi/photobooth_images/*.jpg
rm /home/pi/temp*
